{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "include": [
    "**/*.js",
    "**/*.ts",
  ],
}
